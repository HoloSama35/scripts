#!/bin/sh
#
# run - Executes a file
#

# Gets filename without full path
filename=$(basename "$1")

# Extracts file extension
extension="${filename##*.}"

case "$extension" in
    "go")
        go run "$1"
        ;;
    "js")
        node "$1"
        ;;
    "py")
        python "$1"
        ;;
    "m")
        octave "$1"
        ;;
    "vhd")
        ghdl -a "$1"
        ;;
    *)
        "$1"
esac

